<%- layout("/layouts/boilerplate") %>
<div class="row">
    <div class="col-7 offset-2">
        
    <h3 class="mt-3">List Your Place Here</h3> <br>
    <form method="POST" action="/listings" class="needs-validation" novalidate enctype="multipart/form-data"> <!-- Incase we wanna send any file to backend uploaded by the user then we need to change the encoding type of the form by : enctype="multipart/form-data"  -->
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input class="form-control" type="text" name="listing[title]" placeholder="enter title" required>
            <div class="valid-feedback">
                Looks great!
            </div>
            <div class="invalid-feedback">
                Please enter a valid title
            </div>
        </div>
        

        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea class="form-control" name="listing[description]" id="" placeholder="enter description" cols="30" rows="10" required></textarea>
            <div class="invalid-feedback">
                Please write a description
            </div>
        </div>
        
        <!-- upload Image by sending url -->
        <!-- <div class="mb-3">
            <label for="image" class="form-label" required>Image URL</label>
            <input class="form-control" name="listing[image]" placeholder="enter image URL/Link" type="text">
            <div class="invalid-feedback">
                Please enter a valid image link
            </div>
        </div> -->

        <!-- upload Image file -->
        <div class="mb-3">
            <label for="image" class="form-label">Upload Listing Image</label>
            <input class="form-control" name="listing[image]" type="file" required>
            <div class="invalid-feedback">
                Please upload an image for listing
            </div>
        </div>


        <div class="row">    
            <div class="mb-3 col-md-5">
                <label for="price" class="form-label">Price</label>
                <input class="form-control" name="listing[price]" placeholder="enter price/night" required>
                <div class="invalid-feedback">
                    Please enter a valid price
                </div>
            </div>


            <div class="mb-3 col-md-7">
                <label for="country" class="form-label">Country</label>
                <input class="form-control" type="text" name="listing[country]" placeholder="United States" required>
                <div class="invalid-feedback">
                    Please enter a valid country name
                </div>
            </div>

        </div>

        
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input class="form-control" type="text" name="listing[location]" placeholder="New York, United States" required>
            <div class="invalid-feedback">
                Please enter a valid location
            </div>
        </div>
        
        
        <button class="btn add-btn mt-3 mb-3">Add</button>
        
    </form>
</div>
</div>