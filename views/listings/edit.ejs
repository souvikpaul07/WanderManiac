<%- layout("/layouts/boilerplate") %>

    <div class="row">
    <div class="col-7 offset-2">
    <h3 class="mt-3">Edit your listing</h3>
    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" class="needs-validation" novalidate enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-label"></label>
            <input class="form-control" type="text" name="listing[title]" value="<%= listing.title %>" required >
            <div class="valid-feedback">
                Looks great!
            </div>
            <div class="invalid-feedback">
                Please enter a valid country name
            </div>
        </div>
        

        <div class="mb-3">
            <label for="description" class="form-label"></label>
            <textarea class="form-control" name="listing[description]" cols="30" rows="10" required><%= listing.description %></textarea>
            <div class="invalid-feedback">
                Please write a description
            </div>
        </div>
        
        <div class="mb-3">
            <label for="image" class="form-label">Upload New Image</label>
            <input class="form-control" name="listing[image]" type="file">
        </div>

        <div class="row">
        <div class="mb-3 col-md-4">
            <label for="price" class="form-label"></label>
            <input class="form-control" type="number" name="listing[price]" value="<%= listing.price %>" required>
            <div class="invalid-feedback">
                Please enter a valid price
            </div>
        </div>

        <div class="mb-3 col-md-8">
            <label for="country" class="form-label"></label>
            <input class="form-control" type="text" name="listing[country]" value="<%= listing.country %>" required>
            <div class="invalid-feedback">
                Please enter a valid country name
            </div>
        </div>
        </div>

        <div class="mb-3">
            <label for="location" class="form-label"></label>
            <input class="form-control" type="text" name="listing[location]" value="<%= listing.location %>" required>
            <div class="invalid-feedback">
                Please enter a valid location
            </div>
        </div>
        

        <button class="btn mt-3 mb-3 edit-btn">Edit</button>
        
    </form>

    </div>
    </div>